generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Age {
  PUPPY
  YOUNG
  ADULT
  SENIOR
}

enum EnergyLevel {
  VERY_LOW
  LOW
  MEDIUM
  HIGH
  VERY_HIGH
}

enum Size {
  SMALL
  MEDIUM
  LARGE
}

enum IndependenceLevel {
  VERY_DEPENDENT
  SOMEWHAT_DEPENDENT
  INDEPENDENT
  VERY_INDEPENDENT
}

enum EnvironmentSize {
  VERY_SMALL
  SMALL
  MEDIUM
  LARGE
  VERY_LARGE
}

model Org {
  id       String @id @default(cuid())
  email    String @unique
  password String

  description String?
  name        String
  phone       String
  address     String
  city        String
  state       String
  zip         String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  pets Pet[]

  @@map("orgs")
}

model Pet {
  id          String  @id @default(cuid())
  name        String
  description String?
  orgId       String? @map("org_id")

  age               Age
  energyLevel       EnergyLevel
  independenceLevel IndependenceLevel
  size              Size
  environmentSize   EnvironmentSize

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  orgs Org? @relation(fields: [orgId], references: [id])

  @@map("pets")
}
